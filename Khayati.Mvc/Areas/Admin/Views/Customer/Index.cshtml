@model IEnumerable<Khayati.Core.DTO.CustomerResponseDto>
@{
    ViewData["Title"] = "Customer Page";
}

<div class="container-fluid pt-4 ">

    <h3 class="fw-bold">Customer</h3>
</div>


<div class="container-fluid mb-1 p-3 ">
    <div class="hstack gap-3 row-cols-2">
        <!-- Search Box with Filter Button -->
        <div class="col-4 text-end" >
            <input type="text" class="form-control " placeholder="Search" aria-label="Search">
           
        </div>
        <!-- Spacer to push the Create button to the right -->
        <div class="ms-auto  col-3">
            <!-- Create Customer Button -->
            <a asp-action="Create" asp-controller="Customer" asp-area="Admin" class="btn btn-outline-dark">
                Create Customer
            </a>
        </div>
    </div>
</div>


<div class="card">
    @*<div class="card-header " style="background-color:aliceblue">
        <h3 class="card-title">Responsive Hover Table</h3>
        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control float-right" placeholder="Search" spellcheck="false" data-ms-editor="true">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>*@

    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Phone Number</th>
                    <th>Email Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <button type="submit" class="btn btn-default">
                    @foreach (var customer in Model)
                    {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.Name</td>
                        <td>@customer.DateOfBirth</td>
                        <td>@customer.PhoneNumber</td>
                        <td>@customer.EmailAddress</td>
                        <td>
                            <a asp-action="Edit"
                               asp-controller="Customer"
                               asp-area="Admin"
                               asp-route-id="@customer.CustomerId" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>

                            <a onclick="confirmDeletion(@customer.CustomerId,'Customer','/api/Customer/delete','/Admin/Customer/Index')"
                               class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>

                }

                    </button>


                </tbody>
            </table>

        </div>

    </div>
