@model Khayati.Core.DTO.CustomerResponseDto

@{
    ViewData["Title"] = "Add Customer";
}


<div class="container m-2 p-1">
    <div class="container-fluid pt-4 ">

        <h3 class="fw-bold ">Edit Customer</h3>
    </div>



</div>

<div class="card shadow-sm col-lg-8 m-3 mt-1">
    
    <div class="card-body p-4">
        <form asp-action="Edit" asp-controller="Customers" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name:</label>
                        <input asp-for="Name" type="text" class="form-control border-success-subtle" id="name" placeholder="Enter your full name" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="address" class="form-label">Address:</label>
                        <input asp-for="Address" type="text" class="form-control border-success-subtle" id="address" placeholder="Enter your address" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address:</label>
                        <input asp-for="EmailAddress" type="email" class="form-control border-success-subtle" id="email" placeholder="Enter your email" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="nationalID" class="form-label">National ID:</label>
                        <input asp-for="NationalID" type="text" class="form-control border-success-subtle" id="nationalID" placeholder="Enter your national ID" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="dob" class="form-label">Date of Birth:</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control border-success-subtle" id="dob" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number:</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control border-success-subtle" id="phone" placeholder="Enter your phone number" required>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-outline-success">Update Customer</button>
                <a asp-action="Delete" asp-route-id="#" class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this customer?');">Delete Customer</a>
            </div>
        </form>
    </div>
</div>


