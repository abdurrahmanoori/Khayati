@model Khayati.Core.DTO.Measurement.MeasurementAddDto
<div class="p-3 content-wrapper ">
    <div class="row">

        <div class="col-md-12">
            <h1 class="">
                <a asp-action="Index" asp-controller="Measurement" asp-area="Admin" class="custom-link">
                    Customers
                </a>
                <span class="">/</span> Create
            </h1>
            <div class="col-lg-12 card card-primary">
                <div class="card-header bg-gradient text-center">
                    <h4>Measurement</h4>
                </div>

                <form asp-action="Create" method="post" class="container-fluid p-4" novalidate="novalidate">

                    <div class="row">
                        <div class="col-md-6">

                            <label asp-for="ArmLength" class="form-label"></label>
                            <input asp-for="ArmLength" class="form-control">
                            <span asp-validation-for="ArmLength" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Chest" class="form-label"></label>
                            <input asp-for="Chest" class="form-control">
                            <span asp-validation-for="Chest" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        @* <div class="col-md-6">

                        <label asp-for="RelationshipType" class="form-label"></label>
                        <select asp-for="RelationshipType" asp-items="Html.GetEnumSelectList<RelationshipType>()"
                        class="form-select" data-control="select2" data-placeholder="Select an option">
                        <option value="">Select an option</option>
                        </select>
                        <span asp-validation-for="RelationshipType" id="realtionErrorMsg" class="text-danger"></span>
                        </div> *@
                        <div class="col-md-6">
                            <label asp-for="Height" class="form-label"></label>
                            <input asp-for="Height" class="form-control">
                            <span asp-validation-for="Chest" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">

                            <label asp-for="Leg" class="form-label"></label>
                            <input asp-for="Leg" class="form-control">
                            <span asp-validation-for="Leg" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row ">
                        <div class="col-md-6">

                            <label asp-for="Neck" class="form-label"></label>
                            <input asp-for="Neck" class="form-control">
                            <span asp-validation-for="Neck" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">

                            <label asp-for="DateTaken" class="form-label"></label>
                            <input asp-for="DateTaken" class="form-control">
                            <span asp-validation-for="DateTaken" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row ">
                        <div class="col-md-6">

                            <label asp-for="Sleeve" class="form-label"></label>
                            <input asp-for="Sleeve" class="form-control">
                            <span asp-validation-for="Sleeve" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">

                            <label asp-for="Waist" class="form-label"></label>
                            <input asp-for="Waist" class="form-control">
                            <span asp-validation-for="Waist" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">

                            <label asp-for="ShoulderWidth" class="form-label"></label>
                            <input asp-for="ShoulderWidth" class="form-control">
                            <span asp-validation-for="ShoulderWidth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">

                            <label asp-for="CustomerId" class="form-label"></label>
                            <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
                                <option value="">Select an option</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row ">
                        <div class="col-md-6">

                            <label asp-for="trousers" class="form-label"></label>
                            <input asp-for="trousers" class="form-control">
                            <span asp-validation-for="trousers" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="card-footer">
                        <button class="btn btn-primary float-end w-25" type="submit">Save</button>
                    </div>

                </form>
            </div>

        </div>

    </div>

</div>

