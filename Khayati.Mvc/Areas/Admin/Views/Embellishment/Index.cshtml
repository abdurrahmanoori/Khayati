@using Khayati.Core.DTO.EmbellishmentType
@model IEnumerable<EmbellishmentResponseDto>
@{
    ViewData["Title"] = "EmbellishmentType Page";
}



<div class="col-12">
    <div class="card">
        <div class="card-header">

            <h3 class="card-title">Fixed Header Table</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <a asp-action="Create" asp-area="Admin" asp-controller="EmbellishmentType" class="btn btn-block btn-primary btn-lg">Create</a>
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body table-responsive p-0">
            <table class="table table-head-fixed text-nowrap">
                <thead >
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Sort Value</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <a >
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>

                                <a >
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>