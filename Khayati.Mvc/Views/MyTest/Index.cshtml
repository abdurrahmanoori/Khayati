<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vue Searchable Dropdown</title>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://unpkg.com/vue-simple-search-dropdown/dist/vue-simple-search-dropdown.min.js"></script>
    <script>
        Vue.use(Dropdown);
    </script>
</head>
<body>

    <div id="app">
        <label for="customer">Customer</label>
        <Dropdown :options="customers"
                  v-on:selected="onCustomerSelected"
                  v-on:filter="fetchCustomers"
                  :maxItem="10"
                  placeholder="Search or Select Customer">
        </Dropdown>
    </div>

    <script>
        const { createApp, ref } = Vue;

        createApp({
            data() {
                return {
                    customers: [], // Initial empty list
                };
            },
            methods: {
                async fetchCustomers(searchTerm) {
                    try {
                        // Call API to get customer list based on search term
                        const response = await fetch(`https://localhost:7205/api/General/GetCustomers?search=${searchTerm}&limit=10`);
                        const data = await response.json();
                        this.customers = data; // Update dropdown options
                    } catch (error) {
                        console.error("Error fetching customers:", error);
                    }
                },
                onCustomerSelected(selectedCustomer) {
                    console.log("Selected Customer:", selectedCustomer);
                }
            },
            mounted() {
                this.fetchCustomers(""); // Load initial customers
            }
        }).mount("#app");
    </script>

</body>
</html>
